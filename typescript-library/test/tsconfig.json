{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["esnext"],
    "types": ["node"],
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "customConditions": ["typescript"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
